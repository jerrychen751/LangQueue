{
  "manifest_version": 3,
  "name": "LangQueue",
  "description": "Prompt library, enhancement, chaining, and automation for interacting with LLMs.",
  "version": "0.2.0",
  "action": {
    "default_title": "LangQueue",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://*.chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://*.gemini.google.com/*",
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://*.chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://*.gemini.google.com/*",
    "https://claude.ai/*",
    "https://*.claude.ai/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
